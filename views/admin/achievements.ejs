<% title = 'Manage Achievements' %>

<div class="px-4 sm:px-0">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900 mb-8">Manage Special Achievements</h1>

  <!-- Pending Verifications -->
  <% if (pending.length > 0) { %>
    <div class="mb-8">
      <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-4">Pending Verifications (<%= pending.length %>)</h2>
      <div class="space-y-4">
        <% pending.forEach(item => { %>
          <div class="card">
            <div class="card-body">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <h3 class="text-base font-semibold text-gray-900">
                    <%= item.first_name %> <%= item.last_name %> (<%= item.callsign %>)
                  </h3>
                  <p class="mt-1 text-sm text-gray-600"><%= item.achievement_name %></p>
                  <% if (item.notes) { %>
                    <p class="mt-1 text-sm text-gray-500"><span class="font-medium">Notes:</span> <%= item.notes %></p>
                  <% } %>
                  <% if (item.proof_file_path) { %>
                    <a href="<%= item.proof_file_path %>" target="_blank" class="mt-2 inline-flex items-center text-sm font-semibold text-indigo-600 hover:text-indigo-500">
                      View Proof File â†’
                    </a>
                  <% } %>
                  <p class="mt-2 text-xs text-gray-500">Submitted: <%= new Date(item.created_at).toLocaleDateString() %></p>
                </div>
                <div class="ml-6 flex-shrink-0">
                  <form method="POST" action="/admin/achievements/<%= item.member_id %>/<%= item.id %>/verify">
                    <button type="submit" class="btn-primary">Verify</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  <% } %>

  <!-- Create Achievement Form -->
  <div class="card mb-8">
    <div class="card-body">
      <h2 class="text-xl font-bold text-gray-900 mb-6">Create New Achievement</h2>
      
      <% if (errors && errors.length > 0) { %>
        <div class="rounded-md bg-red-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <% errors.forEach(error => { %>
                <p class="text-sm text-red-800"><%= error.msg %></p>
              <% }); %>
            </div>
          </div>
        </div>
      <% } %>

      <form class="space-y-6" method="POST" action="/admin/achievements/create">
        <div>
          <label class="form-label" for="name">Achievement Name *</label>
          <div class="mt-2">
            <input class="form-input" id="name" name="name" type="text" required value="<%= formData.name || '' %>">
          </div>
        </div>
        
        <div>
          <label class="form-label" for="description">Description</label>
          <div class="mt-2">
            <textarea class="form-input" id="description" name="description" rows="3"><%= formData.description || '' %></textarea>
          </div>
        </div>

        <div class="relative flex items-start">
          <div class="flex h-6 items-center">
            <input id="requiresProof" name="requiresProof" value="true" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" <%= formData.requiresProof !== 'false' ? 'checked' : '' %>>
          </div>
          <div class="ml-3 text-sm leading-6">
            <label for="requiresProof" class="font-medium text-gray-900">Requires proof upload</label>
          </div>
        </div>

        <div class="relative flex items-start">
          <div class="flex h-6 items-center">
            <input id="adminOnly" name="adminOnly" value="true" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" <%= formData.adminOnly === 'true' ? 'checked' : '' %>>
          </div>
          <div class="ml-3 text-sm leading-6">
            <label for="adminOnly" class="font-medium text-gray-900">Admin-only (only admins can grant/revoke)</label>
            <p class="text-xs text-gray-500">Admin-only achievements are visible to all but can only be toggled by administrators</p>
          </div>
        </div>

        <div>
          <button class="btn-primary" type="submit">Create Achievement</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Existing Achievements -->
  <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-4">All Achievements (<%= achievements.length %>)</h2>
  
  <div class="overflow-hidden bg-white shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
    <ul role="list" class="divide-y divide-gray-200">
      <% achievements.forEach((achievement, index) => { %>
        <li class="px-4 py-4 sm:px-6">
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-3">
                <h3 class="text-sm font-semibold text-gray-900"><%= achievement.name %></h3>
                <% if (achievement.requires_proof) { %>
                  <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                    </svg>
                    Proof Required
                  </span>
                <% } %>
                <% if (achievement.admin_only) { %>
                  <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                    <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    Admin Only
                  </span>
                <% } %>
              </div>
              <p class="mt-1 text-sm text-gray-600"><%= achievement.description %></p>
            </div>
            <div class="flex items-center gap-2">
              <button type="button" data-edit="<%= index %>" class="edit-achievement-btn inline-flex items-center px-3 py-1.5 text-sm font-medium text-indigo-600 hover:text-indigo-500">
                <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Edit
              </button>
              <form method="POST" action="/admin/achievements/<%= achievement.id %>/delete" class="delete-achievement-form inline-block">
                <button type="submit" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-red-600 hover:text-red-500">
                  <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                  Delete
                </button>
              </form>
            </div>
          </div>
          
          <!-- Edit Form (Hidden) -->
          <div id="edit-achievement-<%= index %>" class="hidden mt-4 pt-4 border-t border-gray-200">
            <form method="POST" action="/admin/achievements/<%= achievement.id %>/update" class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-900" for="edit-name-<%= achievement.id %>">Achievement Name *</label>
                <div class="mt-1">
                  <input class="form-input" id="edit-name-<%= achievement.id %>" name="name" type="text" required value="<%= achievement.name %>">
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-900" for="edit-description-<%= achievement.id %>">Description</label>
                <div class="mt-1">
                  <textarea class="form-input" id="edit-description-<%= achievement.id %>" name="description" rows="2"><%= achievement.description %></textarea>
                </div>
              </div>

              <div class="relative flex items-start">
                <div class="flex h-6 items-center">
                  <input id="edit-requiresProof-<%= achievement.id %>" name="requiresProof" value="true" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" <%= achievement.requires_proof ? 'checked' : '' %>>
                </div>
                <div class="ml-3 text-sm leading-6">
                  <label for="edit-requiresProof-<%= achievement.id %>" class="font-medium text-gray-900">Requires proof upload</label>
                </div>
              </div>

              <div class="relative flex items-start">
                <div class="flex h-6 items-center">
                  <input id="edit-adminOnly-<%= achievement.id %>" name="adminOnly" value="true" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" <%= achievement.admin_only ? 'checked' : '' %>>
                </div>
                <div class="ml-3 text-sm leading-6">
                  <label for="edit-adminOnly-<%= achievement.id %>" class="font-medium text-gray-900">Admin-only</label>
                </div>
              </div>

              <div class="flex gap-3">
                <button type="submit" class="btn-primary">Save Changes</button>
                <button type="button" data-cancel="<%= index %>" class="cancel-edit-btn inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                  Cancel
                </button>
              </div>
            </form>
          </div>
        </li>
      <% }); %>
    </ul>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Edit buttons
  document.querySelectorAll('.edit-achievement-btn').forEach(button => {
    button.addEventListener('click', function() {
      const index = this.getAttribute('data-edit');
      const form = document.getElementById('edit-achievement-' + index);
      if (form) {
        form.classList.toggle('hidden');
      }
    });
  });

  // Cancel buttons
  document.querySelectorAll('.cancel-edit-btn').forEach(button => {
    button.addEventListener('click', function() {
      const index = this.getAttribute('data-cancel');
      const form = document.getElementById('edit-achievement-' + index);
      if (form) {
        form.classList.add('hidden');
      }
    });
  });

  // Delete confirmation
  document.querySelectorAll('.delete-achievement-form').forEach(form => {
    form.addEventListener('submit', function(e) {
      if (!confirm('Are you sure you want to delete this achievement? This action cannot be undone.')) {
        e.preventDefault();
      }
    });
  });
});
</script>
