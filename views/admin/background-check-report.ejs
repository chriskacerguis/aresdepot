<% title = 'Background Check Report' %>

<div class="px-4 sm:px-0 max-w-7xl mx-auto">
  <div class="mb-6">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Background Check Report</h1>
        <p class="mt-2 text-sm text-gray-700">Track member background check status and completion</p>
      </div>
      <div class="mt-4 sm:mt-0">
        <a href="/admin/reports" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Reports
        </a>
      </div>
    </div>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Members</p>
            <p class="text-2xl font-semibold text-gray-900"><%= stats.total %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Completed</p>
            <p class="text-2xl font-semibold text-gray-900"><%= stats.completed %></p>
            <p class="text-xs text-gray-500 mt-0.5"><%= ((stats.completed / stats.total) * 100).toFixed(1) %>% of all</p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">In Progress</p>
            <p class="text-2xl font-semibold text-gray-900"><%= stats.inProgress + stats.pendingReview %></p>
            <p class="text-xs text-gray-500 mt-0.5"><%= stats.pendingReview %> pending review</p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Not Started</p>
            <p class="text-2xl font-semibold text-gray-900"><%= stats.notStarted %></p>
            <% if (stats.failed > 0) { %>
              <p class="text-xs text-red-600 mt-0.5"><%= stats.failed %> failed</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Progress Bar -->
  <div class="card mb-8">
    <div class="card-body">
      <h3 class="text-sm font-medium text-gray-900 mb-3">Overall Completion Rate</h3>
      <div class="relative">
        <%
          const completedPct = (stats.completed / stats.total) * 100;
          const inProgressPct = ((stats.inProgress + stats.pendingReview) / stats.total) * 100;
          const failedPct = (stats.failed / stats.total) * 100;
        %>
        <div class="overflow-hidden h-6 text-xs flex rounded-lg bg-gray-200">
          <div class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-green-500" style="width: <%= completedPct.toFixed(2) %>%">
            <% if (completedPct > 8) { %><span class="font-semibold"><%= completedPct.toFixed(0) %>%</span><% } %>
          </div>
          <div class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-yellow-500" style="width: <%= inProgressPct.toFixed(2) %>%">
            <% if (inProgressPct > 8) { %><span class="font-semibold"><%= inProgressPct.toFixed(0) %>%</span><% } %>
          </div>
          <% if (failedPct > 0) { %>
            <div class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-red-500" style="width: <%= failedPct.toFixed(2) %>%">
              <% if (failedPct > 8) { %><span class="font-semibold"><%= failedPct.toFixed(0) %>%</span><% } %>
            </div>
          <% } %>
        </div>
      </div>
      <div class="flex justify-between mt-2 text-xs text-gray-600">
        <span><span class="inline-block w-3 h-3 bg-green-500 rounded mr-1"></span>Completed: <%= stats.completed %></span>
        <span><span class="inline-block w-3 h-3 bg-yellow-500 rounded mr-1"></span>In Progress: <%= stats.inProgress + stats.pendingReview %></span>
        <span><span class="inline-block w-3 h-3 bg-gray-300 rounded mr-1"></span>Not Started: <%= stats.notStarted %></span>
        <% if (stats.failed > 0) { %>
          <span><span class="inline-block w-3 h-3 bg-red-500 rounded mr-1"></span>Failed: <%= stats.failed %></span>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Members by Status -->
  <div class="space-y-6">
    <!-- Pending Review -->
    <% if (groupedMembers.pendingReview.length > 0) { %>
      <div class="card">
        <div class="card-body">
          <div class="flex items-center mb-4">
            <svg class="h-6 w-6 text-yellow-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <h2 class="text-lg font-semibold text-gray-900">Pending Review (<%= groupedMembers.pendingReview.length %>)</h2>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Callsign</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% groupedMembers.pendingReview.forEach(member => { %>
                  <tr class="bg-yellow-50">
                    <td class="px-4 py-3 text-sm">
                      <a href="/admin/members/<%= member.id %>" class="text-indigo-600 hover:text-indigo-500 font-medium">
                        <%= member.first_name %> <%= member.last_name %>
                      </a>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-900"><%= member.callsign %></td>
                    <td class="px-4 py-3 text-sm text-gray-600"><%= member.email %></td>
                    <td class="px-4 py-3 text-sm">
                      <span class="inline-flex items-center rounded-md bg-yellow-100 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">
                        <%= member.background_check %>
                      </span>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-600">
                      <%= member.background_check_date ? new Date(member.background_check_date).toLocaleDateString() : '-' %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Not Started -->
    <% if (groupedMembers.notStarted.length > 0) { %>
      <div class="card">
        <div class="card-body">
          <div class="flex items-center mb-4">
            <svg class="h-6 w-6 text-gray-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h2 class="text-lg font-semibold text-gray-900">Not Started (<%= groupedMembers.notStarted.length %>)</h2>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Callsign</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Account Status</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% groupedMembers.notStarted.forEach(member => { %>
                  <tr>
                    <td class="px-4 py-3 text-sm">
                      <a href="/admin/members/<%= member.id %>" class="text-indigo-600 hover:text-indigo-500 font-medium">
                        <%= member.first_name %> <%= member.last_name %>
                      </a>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-900"><%= member.callsign %></td>
                    <td class="px-4 py-3 text-sm text-gray-600"><%= member.email %></td>
                    <td class="px-4 py-3 text-sm">
                      <span class="inline-flex items-center rounded-md bg-<%= member.status === 'active' ? 'green' : 'gray' %>-100 px-2 py-1 text-xs font-medium text-<%= member.status === 'active' ? 'green' : 'gray' %>-800 ring-1 ring-inset ring-<%= member.status === 'active' ? 'green' : 'gray' %>-600/20">
                        <%= member.status.charAt(0).toUpperCase() + member.status.slice(1) %>
                      </span>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>

    <!-- In Progress -->
    <% if (groupedMembers.inProgress.length > 0) { %>
      <div class="card">
        <div class="card-body">
          <div class="flex items-center mb-4">
            <svg class="h-6 w-6 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h2 class="text-lg font-semibold text-gray-900">In Progress (<%= groupedMembers.inProgress.length %>)</h2>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Callsign</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Started</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% groupedMembers.inProgress.forEach(member => { %>
                  <tr class="bg-blue-50">
                    <td class="px-4 py-3 text-sm">
                      <a href="/admin/members/<%= member.id %>" class="text-indigo-600 hover:text-indigo-500 font-medium">
                        <%= member.first_name %> <%= member.last_name %>
                      </a>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-900"><%= member.callsign %></td>
                    <td class="px-4 py-3 text-sm text-gray-600"><%= member.email %></td>
                    <td class="px-4 py-3 text-sm text-gray-600">
                      <%= member.background_check_date ? new Date(member.background_check_date).toLocaleDateString() : '-' %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Completed -->
    <% if (groupedMembers.completed.length > 0) { %>
      <div class="card">
        <div class="card-body">
          <div class="flex items-center mb-4">
            <svg class="h-6 w-6 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h2 class="text-lg font-semibold text-gray-900">Completed (<%= groupedMembers.completed.length %>)</h2>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Callsign</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Completion Date</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% groupedMembers.completed.forEach(member => { %>
                  <tr class="bg-green-50">
                    <td class="px-4 py-3 text-sm">
                      <a href="/admin/members/<%= member.id %>" class="text-indigo-600 hover:text-indigo-500 font-medium">
                        <%= member.first_name %> <%= member.last_name %>
                      </a>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-900"><%= member.callsign %></td>
                    <td class="px-4 py-3 text-sm text-gray-600"><%= member.email %></td>
                    <td class="px-4 py-3 text-sm text-gray-600">
                      <%= member.background_check_date ? new Date(member.background_check_date).toLocaleDateString() : '-' %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Failed -->
    <% if (groupedMembers.failed.length > 0) { %>
      <div class="card">
        <div class="card-body">
          <div class="flex items-center mb-4">
            <svg class="h-6 w-6 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h2 class="text-lg font-semibold text-gray-900">Failed (<%= groupedMembers.failed.length %>)</h2>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Callsign</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% groupedMembers.failed.forEach(member => { %>
                  <tr class="bg-red-50">
                    <td class="px-4 py-3 text-sm">
                      <a href="/admin/members/<%= member.id %>" class="text-indigo-600 hover:text-indigo-500 font-medium">
                        <%= member.first_name %> <%= member.last_name %>
                      </a>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-900"><%= member.callsign %></td>
                    <td class="px-4 py-3 text-sm text-gray-600"><%= member.email %></td>
                    <td class="px-4 py-3 text-sm text-gray-600">
                      <%= member.background_check_date ? new Date(member.background_check_date).toLocaleDateString() : '-' %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
