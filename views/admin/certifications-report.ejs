<% title = 'Certifications Report' %>

<div class="px-4 sm:px-0 max-w-7xl mx-auto">
  <div class="mb-6">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Certifications Report</h1>
        <p class="mt-2 text-sm text-gray-700">Overview of all member certifications and special achievements</p>
      </div>
      <div class="mt-4 sm:mt-0">
        <a href="/admin/reports" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Reports
        </a>
      </div>
    </div>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Certifications</p>
            <p class="text-2xl font-semibold text-gray-900"><%= stats.totalCertifications %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Verified Awards</p>
            <p class="text-2xl font-semibold text-gray-900"><%= stats.totalVerified %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Pending Review</p>
            <p class="text-2xl font-semibold text-gray-900"><%= stats.totalPending %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Admin Only</p>
            <p class="text-2xl font-semibold text-gray-900"><%= stats.adminOnlyCerts %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Certifications Detail -->
  <div class="space-y-6">
    <% certifications.forEach(cert => { %>
      <div class="card">
        <div class="card-body">
          <div class="flex items-center justify-between mb-4">
            <div>
              <div class="flex items-center gap-2">
                <h2 class="text-xl font-bold text-gray-900"><%= cert.name %></h2>
                <% if (cert.admin_only) { %>
                  <span class="inline-flex items-center rounded-md bg-purple-50 px-2 py-1 text-xs font-medium text-purple-700 ring-1 ring-inset ring-purple-700/10">Admin Only</span>
                <% } %>
                <% if (cert.requires_proof) { %>
                  <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">Requires Proof</span>
                <% } %>
              </div>
              <p class="mt-1 text-sm text-gray-600"><%= cert.description %></p>
            </div>
            <div class="text-right">
              <p class="text-sm text-gray-500">
                <span class="font-semibold text-green-600"><%= cert.verified_count %></span> verified
                <% if (cert.pending_count > 0) { %>
                  · <span class="font-semibold text-yellow-600"><%= cert.pending_count %></span> pending
                <% } %>
              </p>
            </div>
          </div>

          <% if (cert.members && cert.members.length > 0) { %>
            <div class="mt-4 overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead>
                  <tr>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Callsign</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Verified By</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <% cert.members.forEach(member => { %>
                    <tr class="<%= member.verified ? 'bg-green-50' : 'bg-yellow-50' %>">
                      <td class="px-4 py-3 text-sm text-gray-900">
                        <a href="/admin/members/<%= member.id %>" class="text-indigo-600 hover:text-indigo-500">
                          <%= member.first_name %> <%= member.last_name %>
                        </a>
                      </td>
                      <td class="px-4 py-3 text-sm text-gray-900"><%= member.callsign %></td>
                      <td class="px-4 py-3 text-sm">
                        <% if (member.verified) { %>
                          <span class="inline-flex items-center rounded-md bg-green-100 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">✓ Verified</span>
                        <% } else { %>
                          <span class="inline-flex items-center rounded-md bg-yellow-100 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">Pending</span>
                        <% } %>
                      </td>
                      <td class="px-4 py-3 text-sm text-gray-600">
                        <% if (member.verified_at || member.granted_at) { %>
                          <%= new Date(member.verified_at || member.granted_at).toLocaleDateString() %>
                        <% } else { %>
                          -
                        <% } %>
                      </td>
                      <td class="px-4 py-3 text-sm text-gray-600">
                        <%= member.verified_by_callsign || member.granted_by_callsign || '-' %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="mt-4 text-center py-8 text-sm text-gray-500">
              No members have been awarded this certification yet.
            </div>
          <% } %>
        </div>
      </div>
    <% }); %>

    <% if (certifications.length === 0) { %>
      <div class="card">
        <div class="card-body text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No certifications</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating a new certification.</p>
          <div class="mt-6">
            <a href="/admin/certifications" class="btn-primary">Manage Certifications</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
