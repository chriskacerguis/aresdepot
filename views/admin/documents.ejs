<% title = 'Manage Documents' %>

<div class="px-4 sm:px-0">
  <!-- Page Header -->
  <div class="sm:flex sm:items-center mb-6">
    <div class="sm:flex-auto">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Documents</h1>
      <p class="mt-2 text-sm text-gray-700">Upload and manage documents accessible to members based on tier requirements.</p>
    </div>
  </div>

  <!-- Success/Error Messages -->
  <% if (typeof success !== 'undefined' && success) { %>
    <div class="rounded-md bg-green-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-green-800"><%= success %></p>
        </div>
      </div>
    </div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <div class="rounded-md bg-red-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <% errors.forEach(error => { %>
            <p class="text-sm text-red-800"><%= error.msg %></p>
          <% }); %>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Upload Form -->
  <div class="card mb-8">
    <div class="card-body">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Upload New Document</h2>
      <form method="POST" action="/admin/documents/upload" enctype="multipart/form-data">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div class="sm:col-span-2">
            <label class="form-label" for="title">Document Title *</label>
            <input class="form-input" type="text" id="title" name="title" required value="<%= formData.title || '' %>">
          </div>

          <div class="sm:col-span-2">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-input" id="description" name="description" rows="3"><%= formData.description || '' %></textarea>
          </div>

          <div>
            <label class="form-label" for="tier_id">Required Tier</label>
            <select class="form-input" id="tier_id" name="tier_id">
              <option value="">No requirement (all members)</option>
              <% tiers.forEach(tier => { %>
                <option value="<%= tier.id %>" <%= formData.tier_id == tier.id ? 'selected' : '' %>><%= tier.name %></option>
              <% }); %>
            </select>
            <p class="mt-1 text-sm text-gray-500">Only members who have achieved this tier can access the document</p>
          </div>

          <div>
            <label class="form-label" for="document">File *</label>
            <input class="form-input" type="file" id="document" name="document" required>
            <p class="mt-1 text-sm text-gray-500">Max 50MB. Allowed: PDF, DOC, DOCX, XLS, XLSX, PPT, PPTX, TXT, ZIP, images</p>
          </div>
        </div>

        <div class="mt-6">
          <button type="submit" class="btn-primary">
            <svg class="h-5 w-5 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            Upload Document
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Documents List -->
  <div class="card">
    <div class="card-body">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Uploaded Documents</h2>
      
      <% if (documents.length === 0) { %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No documents</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by uploading a document.</p>
        </div>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-300">
            <thead>
              <tr>
                <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">Title</th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Required Tier</th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">File</th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Uploaded By</th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date</th>
                <th class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% documents.forEach(doc => { %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900">
                    <%= doc.title %>
                  </td>
                  <td class="px-3 py-4 text-sm text-gray-500">
                    <%= doc.description || '-' %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <% if (doc.tier_name) { %>
                      <span class="badge badge-info"><%= doc.tier_name %></span>
                    <% } else { %>
                      <span class="text-gray-400">All members</span>
                    <% } %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= doc.file_name %>
                    <span class="text-gray-400">(<%= (doc.file_size / 1024 / 1024).toFixed(2) %> MB)</span>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= doc.uploaded_by_callsign || doc.uploaded_by_email %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= new Date(doc.created_at).toLocaleDateString() %>
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                    <button 
                      onclick="editDocument(<%= doc.id %>, '<%= doc.title.replace(/'/g, "\\'") %>', '<%= (doc.description || '').replace(/'/g, "\\'") %>', <%= doc.tier_id || 'null' %>)"
                      class="text-indigo-600 hover:text-indigo-900 mr-4"
                    >
                      Edit
                    </button>
                    <form method="POST" action="/admin/documents/<%= doc.id %>/delete" class="inline" onsubmit="return confirm('Are you sure you want to delete this document? This action cannot be undone.');">
                      <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Edit Document</h3>
    <form id="editForm" method="POST">
      <div class="space-y-4">
        <div>
          <label class="form-label" for="edit_title">Title</label>
          <input class="form-input" type="text" id="edit_title" name="title" required>
        </div>
        <div>
          <label class="form-label" for="edit_description">Description</label>
          <textarea class="form-input" id="edit_description" name="description" rows="3"></textarea>
        </div>
        <div>
          <label class="form-label" for="edit_tier_id">Required Tier</label>
          <select class="form-input" id="edit_tier_id" name="tier_id">
            <option value="">No requirement (all members)</option>
            <% tiers.forEach(tier => { %>
              <option value="<%= tier.id %>"><%= tier.name %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="mt-6 flex justify-end gap-3">
        <button type="button" onclick="closeEditModal()" class="btn-secondary">Cancel</button>
        <button type="submit" class="btn-primary">Save Changes</button>
      </div>
    </form>
  </div>
</div>

<script>
function editDocument(id, title, description, tierId) {
  document.getElementById('edit_title').value = title;
  document.getElementById('edit_description').value = description;
  document.getElementById('edit_tier_id').value = tierId || '';
  document.getElementById('editForm').action = `/admin/documents/${id}/edit`;
  document.getElementById('editModal').classList.remove('hidden');
}

function closeEditModal() {
  document.getElementById('editModal').classList.add('hidden');
}

// Close modal on escape key
document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape') {
    closeEditModal();
  }
});
</script>
