<% title = 'Member Progress Report' %>

<div class="px-4 sm:px-0">
  <div class="mb-6 no-print">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Member Progress Report</h1>
        <p class="mt-2 text-sm text-gray-700">Overview of all member tier certifications</p>
      </div>
      <div class="mt-4 sm:mt-0 flex gap-3">
        <button onclick="window.print()" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
          </svg>
          Print Report
        </button>
        <a href="/admin/reports" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Reports
        </a>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Name</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Callsign</th>
              <% tiers.forEach(tier => { %>
                <th scope="col" class="px-3 py-3.5 text-center text-sm font-semibold text-gray-900">
                  <%= tier.name %>
                </th>
              <% }); %>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% members.forEach(member => { %>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
                  <%= member.first_name %> <%= member.last_name %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= member.callsign %></td>
                <% tiers.forEach(tier => { %>
                  <% 
                    const memberTier = member.tiers.find(t => t.id === tier.id);
                    const progress = memberTier ? 
                      (memberTier.total_tasks > 0 ? 
                        Math.round((memberTier.completed_tasks / memberTier.total_tasks) * 100) : 0) 
                      : 0;
                    const achieved = memberTier && memberTier.achieved;
                  %>
                  <td class="whitespace-nowrap px-3 py-4 text-center text-sm">
                    <% if (achieved) { %>
                      <span class="badge badge-success">âœ“</span>
                    <% } else if (progress > 0) { %>
                      <span class="text-gray-600"><%= progress %>%</span>
                    <% } else { %>
                      <span class="text-gray-400">-</span>
                    <% } %>
                  </td>
                <% }); %>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <div class="mt-8 border-t border-gray-200 pt-4">
        <p class="text-xs text-gray-500 text-center">
          Report generated on <%= new Date().toLocaleString() %>
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  @media print {
    .no-print { display: none; }
    nav, footer { display: none; }
  }
</style>
