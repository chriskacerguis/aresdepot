<% title = 'Manage Members' %>

<div class="px-4 sm:px-0">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">Manage Members (<%= totalMembers %>)</h1>
    
    <!-- Search Form -->
    <form method="GET" action="/admin/members" class="flex gap-2">
      <input 
        type="text" 
        name="search" 
        placeholder="Search members..." 
        value="<%= search %>"
        class="form-input w-64"
      >
      <button type="submit" class="btn-primary">Search</button>
      <% if (search) { %>
        <a href="/admin/members" class="btn-secondary">Clear</a>
      <% } %>
    </form>
  </div>

  <div class="card">
    <% if (members.length === 0) { %>
      <div class="px-4 py-8 text-center text-gray-500">
        <% if (search) { %>
          No members found matching "<%= search %>"
        <% } else { %>
          No members found
        <% } %>
      </div>
    <% } else { %>
    <div class="inline-block min-w-full align-middle">
      <table class="min-w-full divide-y divide-gray-300">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Callsign</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">License Class</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Level</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Email</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">County</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% members.forEach(member => { %>
            <% 
              const statusConfig = {
                active: { bg: 'bg-green-50', text: 'text-green-700', ring: 'ring-green-600/20', label: 'Active' },
                inactive: { bg: 'bg-gray-50', text: 'text-gray-600', ring: 'ring-gray-500/20', label: 'Inactive' },
                suspended: { bg: 'bg-yellow-50', text: 'text-yellow-800', ring: 'ring-yellow-600/20', label: 'Suspended' },
                banned: { bg: 'bg-red-50', text: 'text-red-700', ring: 'ring-red-600/20', label: 'Banned' }
              };
              const status = statusConfig[member.status || 'active'];
              
              const licenseConfig = {
                Technician: { bg: 'bg-slate-100', text: 'text-slate-700', ring: 'ring-slate-600/20', label: 'T' },
                General: { bg: 'bg-amber-100', text: 'text-amber-700', ring: 'ring-amber-600/20', label: 'G' },
                Extra: { bg: 'bg-emerald-100', text: 'text-emerald-700', ring: 'ring-emerald-600/20', label: 'E' }
              };
              const license = member.license_class ? licenseConfig[member.license_class] : null;
              
              const tierConfig = {
                'Level 1 - Basic': { bg: 'bg-orange-100', text: 'text-orange-700', ring: 'ring-orange-600/20' },
                'Level 2 - Intermediate': { bg: 'bg-slate-200', text: 'text-slate-700', ring: 'ring-slate-600/20' },
                'Level 3 - Advanced': { bg: 'bg-yellow-100', text: 'text-yellow-800', ring: 'ring-yellow-600/20' }
              };
              const tier = member.tier_name ? tierConfig[member.tier_name] : null;
            %>
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium sm:pl-6">
                <a href="/admin/members/<%= member.id %>" class="text-indigo-600 hover:text-indigo-900">
                  <%= member.first_name %> <%= member.last_name %>
                </a>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= member.callsign %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <% if (license) { %>
                  <span class="inline-flex items-center rounded-md <%= license.bg %> px-2 py-1 text-xs font-medium <%= license.text %> ring-1 ring-inset <%= license.ring %>">
                    <%= license.label %>
                  </span>
                <% } else { %>
                  <span class="text-gray-400">â€”</span>
                <% } %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <% if (member.tier_name && tier) { %>
                  <span class="inline-flex items-center rounded-md <%= tier.bg %> px-2 py-1 text-xs font-medium <%= tier.text %> ring-1 ring-inset <%= tier.ring %>">
                    <%= member.tier_name %>
                  </span>
                <% } %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= member.email %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= member.county %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <span class="inline-flex items-center rounded-md <%= status.bg %> px-2 py-1 text-xs font-medium <%= status.text %> ring-1 ring-inset <%= status.ring %>">
                  <%= status.label %>
                </span>
              </td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                <a href="/admin/members/<%= member.id %>" class="text-indigo-600 hover:text-indigo-500">View details<span class="sr-only">, <%= member.first_name %> <%= member.last_name %></span></a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6 mt-4 rounded-lg shadow">
      <div class="flex flex-1 justify-between sm:hidden">
        <% if (currentPage > 1) { %>
          <a href="?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Previous</a>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <a href="?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Next</a>
        <% } %>
      </div>
      <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            Showing
            <span class="font-medium"><%= (currentPage - 1) * 10 + 1 %></span>
            to
            <span class="font-medium"><%= Math.min(currentPage * 10, totalMembers) %></span>
            of
            <span class="font-medium"><%= totalMembers %></span>
            results
          </p>
        </div>
        <div>
          <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
            <% if (currentPage > 1) { %>
              <a href="?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                <span class="sr-only">Previous</span>
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
                </svg>
              </a>
            <% } %>
            
            <% for (let i = 1; i <= totalPages; i++) { %>
              <% if (i === currentPage) { %>
                <span class="relative z-10 inline-flex items-center bg-indigo-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"><%= i %></span>
              <% } else if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                <a href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0"><%= i %></a>
              <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 focus:outline-offset-0">...</span>
              <% } %>
            <% } %>
            
            <% if (currentPage < totalPages) { %>
              <a href="?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                <span class="sr-only">Next</span>
                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                </svg>
              </a>
            <% } %>
          </nav>
        </div>
      </div>
    </div>
  <% } %>
</div>
