<% title = 'Manage Members' %>

<div class="px-4 sm:px-0">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900 mb-8">Manage Members</h1>

  <div class="card">
    <div class="inline-block min-w-full align-middle">
      <table class="min-w-full divide-y divide-gray-300">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Callsign</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">License Class</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Email</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">County</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% members.forEach(member => { %>
            <% 
              const statusConfig = {
                active: { bg: 'bg-green-50', text: 'text-green-700', ring: 'ring-green-600/20', label: 'Active' },
                inactive: { bg: 'bg-gray-50', text: 'text-gray-600', ring: 'ring-gray-500/20', label: 'Inactive' },
                suspended: { bg: 'bg-yellow-50', text: 'text-yellow-800', ring: 'ring-yellow-600/20', label: 'Suspended' },
                banned: { bg: 'bg-red-50', text: 'text-red-700', ring: 'ring-red-600/20', label: 'Banned' }
              };
              const status = statusConfig[member.status || 'active'];
              
              const licenseConfig = {
                Technician: { bg: 'bg-slate-100', text: 'text-slate-700', ring: 'ring-slate-600/20', label: 'T' },
                General: { bg: 'bg-amber-100', text: 'text-amber-700', ring: 'ring-amber-600/20', label: 'G' },
                Extra: { bg: 'bg-emerald-100', text: 'text-emerald-700', ring: 'ring-emerald-600/20', label: 'E' }
              };
              const license = member.license_class ? licenseConfig[member.license_class] : null;
            %>
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                <%= member.first_name %> <%= member.last_name %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= member.callsign %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <% if (license) { %>
                  <span class="inline-flex items-center rounded-md <%= license.bg %> px-2 py-1 text-xs font-medium <%= license.text %> ring-1 ring-inset <%= license.ring %>">
                    <%= license.label %>
                  </span>
                <% } else { %>
                  <span class="text-gray-400">â€”</span>
                <% } %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= member.email %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= member.county %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <span class="inline-flex items-center rounded-md <%= status.bg %> px-2 py-1 text-xs font-medium <%= status.text %> ring-1 ring-inset <%= status.ring %>">
                  <%= status.label %>
                </span>
              </td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                <a href="/admin/members/<%= member.id %>" class="text-indigo-600 hover:text-indigo-500">View details<span class="sr-only">, <%= member.first_name %> <%= member.last_name %></span></a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
