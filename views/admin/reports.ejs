<% title = 'Reports' %>

<div class="px-4 sm:px-0">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900 mb-8">Reports</h1>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Event Reports</h2>
        <p class="text-sm text-gray-600 mb-4">Generate attendance reports for events</p>
        <a href="/admin/events" class="btn-primary">View Events</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Member Progress Report</h2>
        <p class="text-sm text-gray-600 mb-4">View progress of all members across tiers</p>
        <a href="/admin/reports/member-progress" class="btn-primary">Generate Report</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Capabilities Report</h2>
        <p class="text-sm text-gray-600 mb-4">Summary of member equipment and training capabilities</p>
        <a href="/admin/reports/capabilities" class="btn-primary">Generate Report</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Member Location Map</h2>
        <p class="text-sm text-gray-600 mb-4">Interactive map showing all active member locations</p>
        <a href="/admin/reports/member-map" class="btn-primary">View Map</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Member Directory</h2>
        <p class="text-sm text-gray-600 mb-4">Complete member contact information</p>
        <a href="/admin/members" class="btn-primary">View Directory</a>
      </div>
    </div>
  </div>
</div>
