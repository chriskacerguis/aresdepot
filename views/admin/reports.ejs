<% title = 'Reports' %>

<div class="px-4 sm:px-0">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900 mb-8">Reports</h1>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Event Attendance Report</h2>
        <p class="text-sm text-gray-600 mb-4">View event summaries and attendance for past 3, 6, or 12 months</p>
        <a href="/admin/reports/event-attendance" class="btn-primary">Generate Report</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Member Progress Report</h2>
        <p class="text-sm text-gray-600 mb-4">View progress of all members across tiers</p>
        <a href="/admin/reports/member-progress" class="btn-primary">Generate Report</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Capabilities Report</h2>
        <p class="text-sm text-gray-600 mb-4">Summary of member equipment and training capabilities</p>
        <a href="/admin/reports/capabilities" class="btn-primary">Generate Report</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Member Location Map</h2>
        <p class="text-sm text-gray-600 mb-4">Interactive map showing all active member locations</p>
        <a href="/admin/reports/member-map" class="btn-primary">View Map</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Member Directory</h2>
        <p class="text-sm text-gray-600 mb-4">Complete member contact information</p>
        <a href="/admin/members" class="btn-primary">View Directory</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Certifications Report</h2>
        <p class="text-sm text-gray-600 mb-4">Overview of all member certifications and achievements</p>
        <a href="/admin/reports/certifications" class="btn-primary">Generate Report</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Background Check Report</h2>
        <p class="text-sm text-gray-600 mb-4">Track member background check status and completion</p>
        <a href="/admin/reports/background-checks" class="btn-primary">Generate Report</a>
      </div>
    </div>

    <div class="card bg-gradient-to-br from-amber-50 to-orange-50 border-2 border-amber-300">
      <div class="card-body">
        <div class="flex items-start mb-3">
          <svg class="h-6 w-6 text-amber-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <h2 class="text-xl font-bold text-amber-900">Deployment Readiness Report</h2>
        </div>
        <p class="text-sm text-amber-800 mb-4">Members ready and willing to be deployed during emergencies</p>
        <a href="/admin/reports/deployment-ready" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">Generate Report</a>
      </div>
    </div>
  </div>
</div>
