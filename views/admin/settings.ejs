<% title = 'Admin Settings' %>

<style>
  [x-cloak] { display: none !important; }
</style>

<div class="px-4 sm:px-0">
  <div class="mb-6">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">Settings</h1>
    <p class="mt-2 text-sm text-gray-700">Configure system settings and preferences</p>
  </div>

  <!-- Layout with Sidebar -->
  <div class="grid grid-cols-1 lg:grid-cols-[256px_1fr] gap-6" x-data="{ activeTab: window.location.hash.slice(1) || 'email' }">
    <!-- Left Sidebar Navigation -->
    <aside>
      <nav class="card lg:sticky lg:top-4">
        <div class="card-body p-0">
          <ul class="divide-y divide-gray-200">
            <li>
              <a 
                href="#email" 
                @click.prevent="activeTab = 'email'; window.location.hash = 'email'"
                :class="activeTab === 'email' ? 'bg-indigo-50 text-indigo-700 border-l-4 border-indigo-700' : 'text-gray-700 hover:bg-gray-50'"
                class="flex items-center px-4 py-3 text-sm font-medium transition-colors"
              >
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                Email (SMTP)
              </a>
            </li>
            <li>
              <a 
                href="#general" 
                @click.prevent="activeTab = 'general'; window.location.hash = 'general'"
                :class="activeTab === 'general' ? 'bg-indigo-50 text-indigo-700 border-l-4 border-indigo-700' : 'text-gray-700 hover:bg-gray-50'"
                class="flex items-center px-4 py-3 text-sm font-medium transition-colors"
              >
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                General
              </a>
            </li>
            <li>
              <a 
                href="#notifications" 
                @click.prevent="activeTab = 'notifications'; window.location.hash = 'notifications'"
                :class="activeTab === 'notifications' ? 'bg-indigo-50 text-indigo-700 border-l-4 border-indigo-700' : 'text-gray-700 hover:bg-gray-50'"
                class="flex items-center px-4 py-3 text-sm font-medium transition-colors"
              >
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                </svg>
                Notifications
              </a>
            </li>
            <li>
              <a 
                href="#tiers" 
                @click.prevent="activeTab = 'tiers'; window.location.hash = 'tiers'"
                :class="activeTab === 'tiers' ? 'bg-indigo-50 text-indigo-700 border-l-4 border-indigo-700' : 'text-gray-700 hover:bg-gray-50'"
                class="flex items-center px-4 py-3 text-sm font-medium transition-colors"
              >
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Tiers
              </a>
            </li>
            <li>
              <a 
                href="#certifications" 
                @click.prevent="activeTab = 'certifications'; window.location.hash = 'certifications'"
                :class="activeTab === 'certifications' ? 'bg-indigo-50 text-indigo-700 border-l-4 border-indigo-700' : 'text-gray-700 hover:bg-gray-50'"
                class="flex items-center px-4 py-3 text-sm font-medium transition-colors"
              >
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                </svg>
                Certifications
              </a>
            </li>
            <li>
              <a 
                href="#instacard" 
                @click.prevent="activeTab = 'instacard'; window.location.hash = 'instacard'"
                :class="activeTab === 'instacard' ? 'bg-indigo-50 text-indigo-700 border-l-4 border-indigo-700' : 'text-gray-700 hover:bg-gray-50'"
                class="flex items-center px-4 py-3 text-sm font-medium transition-colors"
              >
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"></path>
                </svg>
                InstaCard
              </a>
            </li>
            <li>
              <a 
                href="#security" 
                @click.prevent="activeTab = 'security'; window.location.hash = 'security'"
                :class="activeTab === 'security' ? 'bg-indigo-50 text-indigo-700 border-l-4 border-indigo-700' : 'text-gray-700 hover:bg-gray-50'"
                class="flex items-center px-4 py-3 text-sm font-medium transition-colors"
              >
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                Security
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </aside>

    <!-- Main Content Area -->
    <div class="flex-1 min-w-0">
      <% if (success) { %>
        <div class="rounded-md bg-green-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800"><%= success %></p>
            </div>
          </div>
        </div>
      <% } %>

      <% if (error) { %>
        <div class="rounded-md bg-red-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-red-800"><%= error %></p>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Email (SMTP) Settings Tab -->
      <div x-show="activeTab === 'email'" x-cloak>
        <div class="card mb-6">
          <div class="card-body">
            <div class="flex items-center justify-between mb-6">
              <div>
                <h2 class="text-xl font-bold text-gray-900">Email (SMTP) Settings</h2>
                <p class="mt-1 text-sm text-gray-600">Configure SMTP server for sending emails</p>
              </div>
              <button type="button" id="test-smtp-btn" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Test Connection
              </button>
            </div>

            <form method="POST" action="/admin/settings/smtp" class="space-y-6">
              <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                <div class="sm:col-span-2">
                  <label for="smtp_host" class="block text-sm font-medium text-gray-700">SMTP Host</label>
                  <input type="text" name="smtp_host" id="smtp_host" value="<%= smtpConfig.host %>" required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="smtp.gmail.com">
                  <p class="mt-1 text-xs text-gray-500">Example: smtp.gmail.com, smtp.office365.com</p>
                </div>

                <div>
                  <label for="smtp_port" class="block text-sm font-medium text-gray-700">Port</label>
                  <input type="number" name="smtp_port" id="smtp_port" value="<%= smtpConfig.port %>" required min="1" max="65535"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="587">
                  <p class="mt-1 text-xs text-gray-500">Usually 587 (TLS) or 465 (SSL)</p>
                </div>

                <div>
                  <label for="smtp_secure" class="block text-sm font-medium text-gray-700">Security</label>
                  <select name="smtp_secure" id="smtp_secure" 
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                    <option value="false" <%= !smtpConfig.secure ? 'selected' : '' %>>STARTTLS (Port 587)</option>
                    <option value="true" <%= smtpConfig.secure ? 'selected' : '' %>>SSL/TLS (Port 465)</option>
                  </select>
                </div>

                <div class="sm:col-span-2">
                  <label for="smtp_user" class="block text-sm font-medium text-gray-700">Username</label>
                  <input type="text" name="smtp_user" id="smtp_user" value="<%= smtpConfig.user %>"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="your-email@example.com">
                  <p class="mt-1 text-xs text-gray-500">Usually your email address</p>
                </div>

                <div class="sm:col-span-2">
                  <label for="smtp_pass" class="block text-sm font-medium text-gray-700">Password</label>
                  <input type="password" name="smtp_pass" id="smtp_pass" value="<%= smtpConfig.pass %>"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="••••••••">
                  <p class="mt-1 text-xs text-gray-500">Leave blank to keep existing password. For Gmail, use an App Password.</p>
                </div>

                <div class="sm:col-span-2">
                  <label for="smtp_from" class="block text-sm font-medium text-gray-700">From Email Address</label>
                  <input type="email" name="smtp_from" id="smtp_from" value="<%= smtpConfig.from %>" required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="noreply@aresdepot.org">
                  <p class="mt-1 text-xs text-gray-500">Email address shown in the "From" field</p>
                </div>
              </div>

              <div class="flex justify-end gap-3">
                <button type="submit" class="btn-primary">Save Settings</button>
              </div>
            </form>
          </div>
        </div>

        <!-- Help Section -->
        <div class="card">
          <div class="card-body">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Common SMTP Providers</h3>
            <div class="space-y-4 text-sm">
              <div class="border-l-4 border-blue-500 pl-4">
                <p class="font-semibold text-gray-900">Gmail</p>
                <p class="text-gray-600">Host: smtp.gmail.com, Port: 587 (STARTTLS)</p>
                <p class="text-xs text-gray-500 mt-1">Note: Enable 2-factor authentication and use an App Password</p>
              </div>
              <div class="border-l-4 border-green-500 pl-4">
                <p class="font-semibold text-gray-900">Microsoft 365 / Outlook</p>
                <p class="text-gray-600">Host: smtp.office365.com, Port: 587 (STARTTLS)</p>
              </div>
              <div class="border-l-4 border-purple-500 pl-4">
                <p class="font-semibold text-gray-900">SendGrid</p>
                <p class="text-gray-600">Host: smtp.sendgrid.net, Port: 587, User: apikey</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- General Settings Tab -->
      <div x-show="activeTab === 'general'" x-cloak>
        <div class="card">
          <div class="card-body">
            <h2 class="text-xl font-bold text-gray-900 mb-4">General Settings</h2>
            <p class="text-sm text-gray-600">Coming soon...</p>
          </div>
        </div>
      </div>

      <!-- Notifications Tab -->
      <div x-show="activeTab === 'notifications'" x-cloak>
        <div class="card">
          <div class="card-body">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Notification Settings</h2>
            <p class="text-sm text-gray-600">Coming soon...</p>
          </div>
        </div>
      </div>

      <!-- InstaCard Tab -->
      <div x-show="activeTab === 'instacard'" x-cloak>
        <div class="card">
          <div class="card-body">
            <div class="mb-6">
              <h2 class="text-xl font-bold text-gray-900">InstaCard Integration</h2>
              <p class="mt-1 text-sm text-gray-600">Configure InstaCard API credentials for member ID card generation</p>
            </div>

            <form method="POST" action="/admin/settings/instacard" class="space-y-6">
              <div class="grid grid-cols-1 gap-6">
                <div>
                  <label for="instacard_base_url" class="block text-sm font-medium text-gray-700">Base URL</label>
                  <input 
                    type="url" 
                    name="instacard_base_url" 
                    id="instacard_base_url" 
                    value="" 
                    required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="https://api.instacard.com">
                  <p class="mt-1 text-xs text-gray-500">The base URL for the InstaCard API</p>
                </div>

                <div>
                  <label for="instacard_email" class="block text-sm font-medium text-gray-700">Email</label>
                  <input 
                    type="email" 
                    name="instacard_email" 
                    id="instacard_email" 
                    value="" 
                    required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="your-email@example.com">
                  <p class="mt-1 text-xs text-gray-500">Your InstaCard account email</p>
                </div>

                <div>
                  <label for="instacard_password" class="block text-sm font-medium text-gray-700">Password</label>
                  <input 
                    type="password" 
                    name="instacard_password" 
                    id="instacard_password" 
                    value="" 
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="••••••••">
                  <p class="mt-1 text-xs text-gray-500">Leave blank to keep existing password</p>
                </div>

                <div>
                  <label for="instacard_org_id" class="block text-sm font-medium text-gray-700">Organization ID</label>
                  <input 
                    type="text" 
                    name="instacard_org_id" 
                    id="instacard_org_id" 
                    value="" 
                    required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="org_1234567890">
                  <p class="mt-1 text-xs text-gray-500">Your InstaCard organization identifier</p>
                </div>

                <div>
                  <label for="instacard_card_id" class="block text-sm font-medium text-gray-700">Card ID</label>
                  <input 
                    type="text" 
                    name="instacard_card_id" 
                    id="instacard_card_id" 
                    value="" 
                    required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="card_1234567890">
                  <p class="mt-1 text-xs text-gray-500">The card template ID to use for member cards</p>
                </div>
              </div>

              <div class="flex justify-end gap-3">
                <button type="submit" class="btn-primary">Save Settings</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Tiers Tab -->
      <div x-show="activeTab === 'tiers'" x-cloak>
        <div class="space-y-6">
          <!-- Create Tier Form -->
          <div class="card">
            <div class="card-body">
              <h2 class="text-xl font-bold text-gray-900 mb-6">Create New Tier</h2>
              
              <form method="POST" action="/admin/tiers/create" class="space-y-6">
                <div class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-3">
                  <div class="sm:col-span-2">
                    <label class="block text-sm font-medium text-gray-700" for="name">Tier Name</label>
                    <div class="mt-2">
                      <input class="form-input" id="name" name="name" type="text" required>
                    </div>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700" for="sortOrder">Sort Order</label>
                    <div class="mt-2">
                      <input class="form-input" id="sortOrder" name="sortOrder" type="number" required value="<%= (tiers && tiers.length ? tiers.length + 1 : 1) %>">
                    </div>
                  </div>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700" for="description">Description</label>
                  <div class="mt-2">
                    <textarea class="form-input" id="description" name="description" rows="3"></textarea>
                  </div>
                </div>
                <div class="flex justify-end">
                  <button class="btn-primary" type="submit">Create Tier</button>
                </div>
              </form>
            </div>
          </div>

          <!-- Existing Tiers -->
          <div class="card">
            <div class="card-body">
              <h2 class="text-xl font-bold text-gray-900 mb-4">Existing Tiers</h2>
              <% if (tiers && tiers.length > 0) { %>
                <div class="space-y-4">
                  <% tiers.forEach(tier => { %>
                    <div class="border border-gray-200 rounded-lg p-4">
                      <div class="flex items-center justify-between gap-6">
                        <div class="min-w-0 flex-1">
                          <h3 class="text-base font-semibold text-gray-900"><%= tier.name %></h3>
                          <p class="mt-1 text-sm text-gray-600"><%= tier.description %></p>
                          <p class="mt-1 text-xs text-gray-500">Sort Order: <%= tier.sort_order %></p>
                        </div>
                        <div class="flex-shrink-0">
                          <a href="/admin/tiers/<%= tier.id %>/tasks" class="btn-primary">Manage Tasks</a>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </div>
              <% } else { %>
                <p class="text-sm text-gray-500">No tiers created yet. Create your first tier using the form above.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Certifications Tab -->
      <div x-show="activeTab === 'certifications'" x-cloak>
        <div class="space-y-6">
          <!-- Create Certification Form -->
          <div class="card">
            <div class="card-body">
              <h2 class="text-xl font-bold text-gray-900 mb-6">Create New Certification</h2>
              
              <form class="space-y-6" method="POST" action="/admin/certifications/create">
                <div>
                  <label class="block text-sm font-medium text-gray-700" for="certification_name">Certification Name</label>
                  <div class="mt-2">
                    <input class="form-input" id="certification_name" name="name" type="text" required>
                  </div>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700" for="certification_description">Description</label>
                  <div class="mt-2">
                    <textarea class="form-input" id="certification_description" name="description" rows="3"></textarea>
                  </div>
                </div>

                <div class="relative flex items-start">
                  <div class="flex h-6 items-center">
                    <input id="requiresProof" name="requiresProof" value="true" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" checked>
                  </div>
                  <div class="ml-3 text-sm leading-6">
                    <label for="requiresProof" class="font-medium text-gray-900">Require verification upload</label>
                    <p class="text-xs text-gray-500">Members must upload proof when submitting this certification</p>
                  </div>
                </div>

                <div class="relative flex items-start">
                  <div class="flex h-6 items-center">
                    <input id="adminOnly" name="adminOnly" value="true" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                  </div>
                  <div class="ml-3 text-sm leading-6">
                    <label for="adminOnly" class="font-medium text-gray-900">Admin-only</label>
                    <p class="text-xs text-gray-500">Only admins can grant/revoke this certification</p>
                  </div>
                </div>

                <div class="flex justify-end">
                  <button class="btn-primary" type="submit">Create Certification</button>
                </div>
              </form>
            </div>
          </div>

          <!-- Existing Certifications -->
          <div class="card">
            <div class="card-body">
              <h2 class="text-xl font-bold text-gray-900 mb-4">Existing Certifications</h2>
              <% if (certifications && certifications.length > 0) { %>
                <div class="space-y-3">
                  <% certifications.forEach(cert => { %>
                    <div class="border border-gray-200 rounded-lg p-4">
                      <div class="flex items-start justify-between gap-4">
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center gap-2 mb-1">
                            <h3 class="text-sm font-semibold text-gray-900"><%= cert.name %></h3>
                            <% if (cert.requires_proof) { %>
                              <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                                <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                                </svg>
                                Proof Required
                              </span>
                            <% } %>
                            <% if (cert.admin_only) { %>
                              <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                                <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                </svg>
                                Admin Only
                              </span>
                            <% } %>
                          </div>
                          <p class="text-sm text-gray-600"><%= cert.description %></p>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </div>
              <% } else { %>
                <p class="text-sm text-gray-500">No certifications created yet. Create your first certification using the form above.</p>
              <% } %>
            </div>
          </div>
          
          <!-- Pending Verifications Notice -->
          <% if (pendingCount && pendingCount > 0) { %>
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-yellow-700">
                    <strong><%= pendingCount %></strong> certification<%= pendingCount !== 1 ? 's' : '' %> pending verification. 
                    <a href="/admin/certifications" class="font-medium underline text-yellow-700 hover:text-yellow-600">View all certifications &rarr;</a>
                  </p>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Security Tab -->
      <div x-show="activeTab === 'security'" x-cloak>
        <div class="card">
          <div class="card-body">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Security Settings</h2>
            <p class="text-sm text-gray-600">Coming soon...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.getElementById('test-smtp-btn').addEventListener('click', async () => {
  const btn = document.getElementById('test-smtp-btn');
  btn.disabled = true;
  btn.innerHTML = '<svg class="animate-spin h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Testing...';
  
  try {
    const response = await fetch('/admin/settings/smtp/test', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    });
    const result = await response.json();
    
    if (result.success) {
      alert('✓ SMTP connection successful!');
    } else {
      alert('✗ SMTP connection failed: ' + result.error);
    }
  } catch (error) {
    alert('✗ Test failed: ' + error.message);
  } finally {
    btn.disabled = false;
    btn.innerHTML = '<svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>Test Connection';
  }
});
</script>

