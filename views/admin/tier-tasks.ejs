<% title = 'Manage Tasks - ' + tier.name %>

<div class="px-4 sm:px-0">
  <div class="mb-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-gray-900"><%= tier.name %> - Tasks</h1>
      </div>
      <div class="mt-4 sm:mt-0">
        <a href="/admin/tiers" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
          <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Tiers
        </a>
      </div>
    </div>
  </div>

  <!-- Create Task Form -->
  <div class="card mb-8">
    <div class="card-body">
      <h2 class="text-xl font-bold text-gray-900 mb-6">Add New Task</h2>
      
      <% if (errors && errors.length > 0) { %>
        <div class="rounded-md bg-red-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <% errors.forEach(error => { %>
                <p class="text-sm text-red-800"><%= error.msg %></p>
              <% }); %>
            </div>
          </div>
        </div>
      <% } %>

      <form class="space-y-6" method="POST" action="/admin/tiers/<%= tier.id %>/tasks/create">
        <div class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-3">
          <div class="sm:col-span-2">
            <label class="form-label" for="name">Task Name *</label>
            <div class="mt-2">
              <input class="form-input" id="name" name="name" type="text" required value="<%= formData.name || '' %>">
            </div>
          </div>
          <div>
            <label class="form-label" for="sortOrder">Sort Order *</label>
            <div class="mt-2">
              <input class="form-input" id="sortOrder" name="sortOrder" type="number" required value="<%= formData.sortOrder || (tier.tasks.length + 1) %>">
            </div>
          </div>
        </div>
        <div>
          <label class="form-label" for="description">Description</label>
          <div class="mt-2">
            <textarea class="form-input" id="description" name="description" rows="3"><%= formData.description || '' %></textarea>
          </div>
        </div>
        <div>
          <button class="btn-primary" type="submit">Add Task</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Existing Tasks -->
  <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-4">Tasks (<%= tier.tasks.length %>)</h2>
  <% if (tier.tasks.length > 0) { %>
    <div class="space-y-4">
      <% tier.tasks.forEach(task => { %>
        <div class="card">
          <div class="card-body">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-base font-semibold text-gray-900"><%= task.name %></h3>
                <p class="mt-1 text-sm text-gray-600"><%= task.description %></p>
                <p class="mt-1 text-xs text-gray-500">Sort Order: <%= task.sort_order %></p>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="card">
      <div class="card-body">
        <p class="text-sm text-gray-500">No tasks created yet for this tier.</p>
      </div>
    </div>
  <% } %>
</div>
