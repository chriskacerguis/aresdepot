<% title = 'Manage Tiers' %>

<div class="px-4 sm:px-0">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">Manage Tiers</h1>
  </div>

  <!-- Create Tier Form -->
  <div class="card mb-8">
    <div class="card-body">
      <h2 class="text-xl font-bold text-gray-900 mb-6">Create New Tier</h2>
      
      <% if (errors && errors.length > 0) { %>
        <div class="rounded-md bg-red-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <% errors.forEach(error => { %>
                <p class="text-sm text-red-800"><%= error.msg %></p>
              <% }); %>
            </div>
          </div>
        </div>
      <% } %>

        <div class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-3">
          <div class="sm:col-span-2">
            <label class="form-label" for="name">Tier Name *</label>
            <div class="mt-2">
              <input class="form-input" id="name" name="name" type="text" required value="<%= formData.name || '' %>">
            </div>
          </div>
          <div>
            <label class="form-label" for="sortOrder">Sort Order *</label>
            <div class="mt-2">
              <input class="form-input" id="sortOrder" name="sortOrder" type="number" required value="<%= formData.sortOrder || (tiers.length + 1) %>">
            </div>
          </div>
        </div>
        <div>
          <label class="form-label" for="description">Description</label>
          <div class="mt-2">
            <textarea class="form-input" id="description" name="description" rows="3"><%= formData.description || '' %></textarea>
          </div>
        </div>
        <div class="pt-4">
          <button class="btn-primary" type="submit">Create Tier</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Existing Tiers -->
  <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-4">Existing Tiers</h2>
  <div class="space-y-4">
    <% tiers.forEach(tier => { %>
      <div class="card">
        <div class="card-body">
          <div class="flex items-center justify-between gap-6">
            <div class="min-w-0 flex-1">
              <h3 class="text-base font-semibold text-gray-900"><%= tier.name %></h3>
              <p class="mt-1 text-sm text-gray-600"><%= tier.description %></p>
              <p class="mt-1 text-xs text-gray-500">Sort Order: <%= tier.sort_order %></p>
            </div>
            <div class="flex-shrink-0">
              <a href="/admin/tiers/<%= tier.id %>/tasks" class="btn-primary">Manage Tasks</a>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
