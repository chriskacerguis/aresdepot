<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Login to ARES Depot</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <% if (errors && errors.length > 0) { %>
      <div class="rounded-md bg-red-50 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <% errors.forEach(error => { %>
              <p class="text-sm text-red-800"><%= error.msg %></p>
            <% }); %>
          </div>
        </div>
      </div>
    <% } %>

    <form class="space-y-6" method="POST" action="/auth/login">
      <div>
        <label class="form-label" for="identifier">Callsign or Email</label>
        <div class="mt-2">
          <input 
            class="form-input" 
            id="identifier" 
            name="identifier" 
            type="text" 
            autocomplete="username"
            placeholder="Enter your callsign or email"
            required
            value="<%= formData.identifier || '' %>"
          >
        </div>
        <p class="mt-1 text-xs text-gray-500">Members use callsign, admins use email</p>
      </div>

      <div>
        <label class="form-label" for="password">Password</label>
        <div class="mt-2">
          <input 
            class="form-input" 
            id="password" 
            name="password" 
            type="password" 
            autocomplete="current-password"
            required
          >
        </div>
      </div>

      <div>
        <button class="btn-primary w-full" type="submit">
          Sign in
        </button>
      </div>
    </form>

    <p class="mt-10 text-center text-sm text-gray-500">
      Don't have an account?
      <a href="/auth/register" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Register here</a>
    </p>
  </div>
</div>
