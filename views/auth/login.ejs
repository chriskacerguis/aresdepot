<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Login to ARES Depot</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <% if (errors && errors.length > 0) { %>
      <div class="rounded-md bg-red-50 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <% errors.forEach(error => { %>
              <p class="text-sm text-red-800"><%= error.msg %></p>
            <% }); %>
          </div>
        </div>
      </div>
    <% } %>

    <% if (typeof query !== 'undefined' && query.reset === 'success') { %>
      <div class="rounded-md bg-green-50 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-green-800">Password reset successful! You can now log in with your new password.</p>
          </div>
        </div>
      </div>
    <% } %>

    <form class="space-y-6" method="POST" action="/auth/login">
      <div>
        <label class="form-label" for="identifier">Callsign</label>
        <div class="mt-2">
          <input 
            class="form-input" 
            id="identifier" 
            name="identifier" 
            type="text" 
            autocomplete="username"
            placeholder="Enter your callsign"
            required
            value="<%= formData.identifier || '' %>"
          >
        </div>
      </div>

      <div>
        <label class="form-label" for="password">Password</label>
        <div class="mt-2">
          <input 
            class="form-input" 
            id="password" 
            name="password" 
            type="password" 
            autocomplete="current-password"
            required
          >
        </div>
      </div>

      <div class="flex items-center justify-end">
        <div class="text-sm">
          <a href="/auth/forgot-password" class="font-semibold text-indigo-600 hover:text-indigo-500">Forgot password?</a>
        </div>
      </div>

      <div>
        <button class="btn-primary w-full" type="submit">
          Sign in
        </button>
      </div>

      <!-- Passkey login option -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="bg-white px-2 text-gray-500">Or continue with</span>
        </div>
      </div>

      <div>
        <button 
          type="button" 
          id="passkeyLoginBtn"
          class="w-full flex items-center justify-center gap-2 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-600"
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
          </svg>
          <span id="passkeyBtnText">Sign in with passkey</span>
          <svg id="passkeySpinner" class="hidden animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </button>
      </div>
    </form>

    <p class="mt-10 text-center text-sm text-gray-500">
      Don't have an account?
      <a href="/auth/register" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Register here</a>
    </p>
  </div>
</div>

<script type="module">
import { startAuthentication } from 'https://unpkg.com/@simplewebauthn/browser@10.0.0/dist/bundle/index.js';

document.getElementById('passkeyLoginBtn').addEventListener('click', async () => {
  const btn = document.getElementById('passkeyLoginBtn');
  const btnText = document.getElementById('passkeyBtnText');
  const spinner = document.getElementById('passkeySpinner');
  const identifierInput = document.getElementById('identifier');

  const identifier = identifierInput.value.trim();
  if (!identifier) {
    alert('Please enter your callsign first');
    identifierInput.focus();
    return;
  }

  try {
    // Disable button and show spinner
    btn.disabled = true;
    btnText.textContent = 'Authenticating...';
    spinner.classList.remove('hidden');

    // Get authentication options
    const optionsRes = await fetch('/auth/passkey/login-options', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ identifier })
    });

    if (!optionsRes.ok) {
      const error = await optionsRes.json();
      throw new Error(error.error || 'Failed to start authentication');
    }

    const { options, userId } = await optionsRes.json();

    // Start WebAuthn authentication
    const credential = await startAuthentication(options);

    // Verify authentication
    const verifyRes = await fetch('/auth/passkey/login', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ credential, userId })
    });

    if (!verifyRes.ok) {
      const error = await verifyRes.json();
      throw new Error(error.error || 'Authentication failed');
    }

    const result = await verifyRes.json();
    if (result.verified) {
      window.location.href = result.redirectTo;
    }
  } catch (error) {
    console.error('Passkey login error:', error);
    alert(error.message || 'Passkey authentication failed. Please try password login instead.');
    btn.disabled = false;
    btnText.textContent = 'Sign in with passkey';
    spinner.classList.add('hidden');
  }
});
</script>

