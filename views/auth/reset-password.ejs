<% title = 'Reset Password' %>

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Set new password</h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Enter your new password below.
    </p>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <% if (errors && errors.length > 0) { %>
      <div class="rounded-md bg-red-50 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <% errors.forEach(error => { %>
              <p class="text-sm text-red-800"><%= error.msg %></p>
            <% }); %>
          </div>
        </div>
      </div>
    <% } %>

    <form class="space-y-6" method="POST" action="/auth/reset-password/<%= token %>">
      <div>
        <label class="form-label" for="password">New Password</label>
        <div class="mt-2">
          <input 
            class="form-input" 
            id="password" 
            name="password" 
            type="password" 
            autocomplete="new-password"
            required
            minlength="8"
          >
        </div>
        <p class="mt-1 text-xs text-gray-500">Must be at least 8 characters</p>
      </div>

      <div>
        <label class="form-label" for="confirmPassword">Confirm New Password</label>
        <div class="mt-2">
          <input 
            class="form-input" 
            id="confirmPassword" 
            name="confirmPassword" 
            type="password" 
            autocomplete="new-password"
            required
            minlength="8"
          >
        </div>
      </div>

      <div>
        <button class="btn-primary w-full" type="submit">
          Reset password
        </button>
      </div>
    </form>

    <p class="mt-6 text-center text-sm text-gray-500">
      <a href="/auth/login" class="font-semibold text-indigo-600 hover:text-indigo-500">Back to login</a>
    </p>
  </div>
</div>
