<% title = 'Member Dashboard' %>

<div class="px-4 sm:px-0">
  <div class="mb-8">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">
      Welcome back, <%= member.first_name %> <%= member.last_name %> (<%= member.callsign %>)
    </h1>
  </div>

  <!-- Passkey Setup Banner -->
  <% if (!hasPasskeys) { %>
    <div class="mb-6 rounded-lg bg-yellow-50 p-4 border border-yellow-200" x-data="{ dismissed: false }" x-show="!dismissed">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-yellow-800">Secure Your Account with a Passkey</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p>
              Enable passwordless sign-in with your fingerprint, face recognition, or device PIN. 
              Passkeys are more secure than passwords and can't be phished.
            </p>
          </div>
          <div class="mt-4">
            <a href="/members/profile/edit#security" class="inline-flex items-center rounded-md bg-yellow-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-yellow-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-600">
              Set Up Passkey
              <svg class="ml-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button @click="dismissed = true" type="button" class="inline-flex rounded-md bg-yellow-50 p-1.5 text-yellow-500 hover:bg-yellow-100 focus:outline-none focus:ring-2 focus:ring-yellow-600 focus:ring-offset-2 focus:ring-offset-yellow-50">
              <span class="sr-only">Dismiss</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Tier Progress -->
  <div class="mb-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-4">Your Progress</h2>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% member.tiers.forEach(tier => { %>
        <div class="card <%= tier.achieved ? 'ring-2 ring-green-600' : '' %>">
          <div class="card-body">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-base font-semibold text-gray-900"><%= tier.name %></h3>
              <% if (tier.achieved) { %>
                <span class="badge badge-success">âœ“ Achieved</span>
              <% } %>
            </div>
            <p class="text-sm text-gray-600 mb-4"><%= tier.description %></p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-700">
                <%= tier.completed_tasks %> / <%= tier.total_tasks %> tasks
              </span>
              <div class="w-24 bg-gray-200 rounded-full h-2.5">
                <div 
                  class="bg-indigo-600 h-2.5 rounded-full transition-all duration-300" 
                  style="width: <%= tier.total_tasks > 0 ? (tier.completed_tasks / tier.total_tasks * 100) : 0 %>%"
                ></div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Special Certifications -->
  <div class="mt-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-4">Special Certifications</h2>
    <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4">
      <% member.achievements.forEach(achievement => { %>
        <div class="card <%= achievement.verified ? 'bg-gradient-to-br from-green-50 to-white ring-2 ring-green-600' : '' %>">
          <div class="card-body text-center">
            <div class="text-4xl mb-2"><%= achievement.verified ? 'ðŸ†' : 'âšª' %></div>
            <h4 class="font-semibold text-sm text-gray-900"><%= achievement.name %></h4>
            <% if (achievement.verified) { %>
              <p class="text-xs text-green-700 mt-1 font-medium">Verified</p>
              <% if (achievement.granted_by) { %>
                <p class="text-xs text-gray-500 mt-1">Granted by admin</p>
              <% } %>
            <% } else if (achievement.admin_only) { %>
              <p class="text-xs text-yellow-700 mt-1 font-medium">Admin Only</p>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Upcoming Events -->
  <div class="mb-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-4">Upcoming Events</h2>
    <% if (events.length > 0) { %>
      <div class="space-y-4">
        <% events.forEach(event => { %>
          <div class="card">
            <div class="card-body">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <h3 class="text-base font-semibold"><a href="/events/<%= event.id %>" class="text-indigo-600 hover:text-indigo-500"><%= event.name %></a></h3>
                  <p class="mt-1 text-sm text-gray-600"><%= event.description %></p>
                  <p class="mt-2 text-sm text-gray-500">
                    <span class="inline-flex items-center gap-1">
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      <%= event.location %>
                    </span>
                    <span class="mx-2">â€¢</span>
                    <span class="inline-flex items-center gap-1">
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <%= new Date(event.event_date).toLocaleDateString() %>
                    </span>
                  </p>
                  <% if (event.minimum_tier_name) { %>
                    <p class="mt-1 text-xs text-gray-500">Minimum Tier: <%= event.minimum_tier_name %></p>
                  <% } %>
                </div>
                <div class="ml-6 flex-shrink-0">
                  <% if (event.userRSVP && event.userRSVP.status === 'attending') { %>
                    <span class="badge badge-success mb-2 block">âœ“ RSVP'd</span>
                    <form method="POST" action="/events/<%= event.id %>/cancel-rsvp">
                      <button type="submit" class="btn-secondary">Cancel RSVP</button>
                    </form>
                  <% } else { %>
                    <a href="/events/<%= event.id %>" class="btn-primary">RSVP</a>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="card">
        <div class="card-body">
          <p class="text-sm text-gray-500">No upcoming events at this time.</p>
        </div>
      </div>
    <% } %>
  </div>
</div>
